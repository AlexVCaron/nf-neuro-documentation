---
const { class: className } = Astro.props;
import { Image } from "astro:assets";
import { Button } from "@/components/ui/button";
import nfneurolight from "@/assets/images/nf-neuro_logo_light.svg";
import nfneurodark from "@/assets/images/nf-neuro_logo_dark.svg";
---

<div
  class:list={[
    "pattern py-6 w-full md:w-3/4 md:max-w-8xl min-h-dynamic_hero flex flex-col items-center justify-center",
    className,
  ]}
>
  <div class="flex flex-col-reverse md:flex-row">
    <div
      class="flex flex-col gap-4 md:w-1/2 p-8 justify-center items-center md:items-start"
    >
      <h1
        class="text-pretty text-center md:text-left md:text-4xl lg:text-5xl tracking-wide"
      >
        Build efficient neuroimaging pipelines with <i class="text-primary">nf-neuro</i>
      </h1>
      <a href=`${import.meta.env.BASE_URL}/getting-started` class="py-4">
        <Button size="lg" className="rounded-lg">
          <h4 class="text-lg">Get started</h4>
        </Button>
      </a>
    </div>
    <div class="hidden md:flex w-1/2 justify-center align-middle">
      <Image id="light-logo" src={nfneurolight} alt="404" />
      <Image id="dark-logo" src={nfneurodark} alt="404" />
    </div>
  </div>
</div>

<style>
  #dark-logo {
    display: none;
  }
  #light-logo {
    display: block;
  }

  :global(.dark) #dark-logo {
    display: block;
  }

  :global(.dark) #light-logo {
    display: none;
  }
</style>
