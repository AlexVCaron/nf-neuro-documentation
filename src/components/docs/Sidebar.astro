---
import { generateSidebar } from "@/lib/sidebar.js";

const items = await generateSidebar();
---

<nav class="sidebar">
  <ul>
    {items.map((item: { children: any[]; label: unknown; href: string | URL | null | undefined; }) => (
      <li>
        {item.children ? (
          <details>
            <summary>{item.label}</summary>
            <ul>
              {item.children.map((child: { children: any[]; label: unknown; href: string | URL | null | undefined; }) => (
                <li>
                  {child.children ? (
                    <details>
                      <summary>{child.label}</summary>
                      <ul>
                        {child.children.map((subchild: { href: string | URL | null | undefined; label: unknown; }) => (
                          <li><a href={subchild.href}>{subchild.label}</a></li>
                        ))}
                      </ul>
                    </details>
                  ) : (
                    <a href={child.href}>{child.label}</a>
                  )}
                </li>
              ))}
            </ul>
          </details>
        ) : (
          <a href={item.href}>{item.label}</a>
        )}
      </li>
    ))}
  </ul>
</nav>

<style>
  .sidebar {
    width: 250px;
    padding: 1rem;
    border-radius: 8px;
  }

  .sidebar ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .sidebar li {
    margin-bottom: 0rem;
  }

  details {
    transition: all 0.3s ease-in-out;
    border-left: 0px solid transparent;
    padding-left: 0rem;
  }

  details[open] {
    border-left-color: #4AA970;
  }

  summary {
    cursor: pointer;
    font-weight: bold;
    padding: 0rem;
    border-radius: 5px;
  }

  summary::marker {
    display: none;
  }

  summary::after {
    font-size: 1rem;
    transition: transform 0.2s ease;
  }

  details[open] > summary::after {
    transform: rotate(180deg);
  }

  ul {
    margin-left: 0rem;
    padding-left: 0;
  }

  /* Add indentation to child items */
  .sidebar ul ul {
    padding-left: 1rem;  /* Indentation for direct children */
  }

  .sidebar ul ul ul {
    padding-left: 2rem;  /* More indentation for deeper levels */
  }

</style>
